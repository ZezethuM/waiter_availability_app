@page
@model waitersRazorPages.Pages.ManagerViewModel
@{
    ViewData["Title"] = "Manager View";
}

<div class="widget">
   <form method="post">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>DAYS</th>
                <th>PEOPLE</th>
            </tr>
        </thead>
        @foreach (var item in @Model.DaysOfWeek)
        {
        <tbody>
            <tr>
                <td>@item.Key</td>
            
            @foreach (var days in item.Value)
            {
            <td>
                @days
            </td>       
            }
            </tr>
        </tbody>
        } 
    </table>
    <div class="form-group row mt-5">
    <div class="col-sm-10">
        <button type="submit" asp-page-handler="delete" class="submitbtn">RESET</button>
    </div>
    </div>
</form>

</div>
