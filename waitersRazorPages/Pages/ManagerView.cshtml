@page
@model waitersRazorPages.Pages.ManagerViewModel
@{
    ViewData["Title"] = "Manager View";
}

<div class="widget">
   <form method="post">
    <h1 class="display-5 mb">The Week's Schedule</h1>
    <table class="table table-bordered mytable">
        <thead>
            <tr>
                <th>DAYS</th>
                <th>WAITERS</th>
            </tr>
        </thead>
        @foreach (var item in @Model.DaysOfWeek)
        {
        <tbody>
              
            <td>
                @item.Key  
            </td>
            
            <td>
            @foreach (var days in item.Value)
            {
                @if(HttpContext.Session.GetString("username") == "Admin")
                {
                    <li>
                        <input  type="submit" asp-page="ScheduleShift" class="btn" asp-for="@Model.UserName" value="@days" asp-page-handler="Update">
                    </li>
                }
                    else
                    {
                        <li>
                        @days
                    </li>
                    }
            }
            </td>      
           
        </tbody>
        } 
    </table>
    @if(TempData["AlertMessage"] != null)
    {
        <div class="alert alert-success">
            <b>@TempData["AlertMessage"]</b>
        </div>
    }
    <div class="form-group row mt-5">
    <div class="col-sm-10">
        @if(@Model.UserName != null)
        {
            <button type="submit" asp-page-handler="delete" class="button-73">RESET</button>
            <button class="button-73"><a asp-page="Index" asp-page-handler="Logout">LOGOUT</a></button>
        }
        @if(@Model.UserName == null)
        {
            <button type="Index" asp-page-handler="LogIn" class="button-73 blink">Login</button>
        }
    </div>
    </div>
</form>

</div>
