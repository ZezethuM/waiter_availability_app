@page
@model waitersRazorPages.Pages.ManagerViewModel
@{
    ViewData["Title"] = "Manager View";
}

<div class="widget">
   <form method="post">
    <h1 class="display-5 mb">The Week's Schedule</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>DAYS</th>
                <th>WAITERS</th>
            </tr>
        </thead>
        @foreach (var item in @Model.DaysOfWeek)
        {
        <tbody>
              
            <td>
                @item.Key  
            </td>
            
            <td>
            @foreach (var days in item.Value)
            {
                <li>
                        @days
                </li>
            }
            </td>      
           
        </tbody>
        } 
    </table>
    @if(TempData["AlertMessage"] != null)
    {
        <div class="alert alert-success">
            <b>@TempData["AlertMessage"]</b>
        </div>
    }
    <div class="form-group row mt-5">
    <div class="col-sm-10">
        <button type="submit" asp-page-handler="delete" class="submitbtn">RESET</button>
    </div>
    </div>
</form>

</div>
