@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
<div class="text-center">
    <div class="widget">
<form method="post">
<div class="form-group">
    <h1 class="display-5">Welcome <b>@Model.shifts.FirstName</b></h1>
    <h1 class="display-5">Schedule Shift Days</h1>
</div>
    <table class="table">
            <tr>
                <th>SELECT</th>
                <th>DAY</th>
                <th>STATUS</th>

            </tr>
        @foreach (var item in @Model.DaysOfWeek)
        {
        <tr>
            @if(item.Value.Contains(@Model.shifts.FirstName!))
            {
                <td>
                    <input name="CheckedDays" type="checkbox" checked value="@item.Key" />
                </td>
                <td>
                    @item.Key
                </td>     
            }
            else
            {
                <td>
                    <input name="CheckedDays" type="checkbox" value="@item.Key" />
                </td>
                <td>
                    @item.Key
                </td>     
            }
            @if(item.Value.Count() == 0)
            {
                <td>
                    <i class="fa fa-battery-empty" id="empty" aria-hidden="true"><h6>Empty</h6></i>
                </td>
            }
            else if(item.Value.Count() < 3)
            {
                <td>
                    <i class="fa fa-battery-half" id="warning" aria-hidden="true"><h6>Half-full</h6></i>
                </td>
            }
            else if(item.Value.Count() >= 3)
            {
                <td>
                    <i class="fa fa-battery-full" id="good" aria-hidden="true"><h6>Full</h6></i>
                </td>
            }
            
        </tr>
        }
    </table>
    @if(TempData["Message"] != null)
    {
        <div class="alert alert-success">
            <b>@TempData["Message"]</b>
        </div>
    }
    <div class="form-group row mt-5">
    <div class="col-sm-13">
        <button type="update" asp-page-handler="Reset" class="submitbtn">UPDATE</button>
        @* <button type="submit" asp-page-handler="Shift" class="submitbtn">SUBMIT</button> *@
    </div>
    </div>
    <div class="form-group row mt-5 mb-5">
        <input type="hidden" class="form-control"  asp-for="shifts!.FirstName" id="firstName" placeholder="Name">
    </div>
</form>
</div>
</div>
</div>
