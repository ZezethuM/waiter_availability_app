<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] waitersRazorPages</title>
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/waitersRazorPages.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color: #e50191;">
            <div class="container">
                <a class="navbar-brand text-white font-weight-bold text-uppercase" asp-area="" asp-page=""><strong><i class="fa fa-heart-o" aria-hidden="true"></i>JUSTCOFFESTORE<i class="fa fa-heart-o" aria-hidden="true"></i></strong></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if(Context.Session.GetString("username") != null && Context.Session.GetString("username") != "Admin")
                        {
                            <li class="nav-item ">
                                <a class="nav-link text-white font-weight-bold text-uppercase " asp-area="/ScheduleShift" asp-page="/ScheduleShift"><strong>Home</strong></a>
                            </li> 
                        }
                           @if(Context.Session.GetString("username") == "Admin")
                           {
                                <li class="nav-item">
                                    <a class="nav-link text-white font-weight-bold text-uppercase " asp-area="" asp-page="/ManagerView"><strong>SCHEDULE</strong></a>
                                </li>
                           }
                            <li class="nav-item">
                                <a class="nav-link text-white font-weight-bold text-uppercase"  asp-area="" asp-page="/UserGuide"><strong>UserGuide</strong></a>
                            </li>
                            @if(Context.Session.GetString("username") != null && Context.Session.GetString("name") != null)
                            {
                                  <li class="nav-item">
                                    <button class="navbtn"><a asp-page="Index" asp-page-handler="Logout"><strong>LOGOUT</strong></a></button>
                                  </li>
                            }

                        @* <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li> *@

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" id="navi">
        <div class="container">
            &copy; 2023 - waitersRazorPages - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>