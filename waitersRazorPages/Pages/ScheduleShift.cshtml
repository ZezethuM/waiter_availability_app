@page
@model waitersRazorPages.Pages.ScheduleShiftModel
@{
}
<div class="container">
    <div class="temporal">
        @if(@Model.Username != null && @Model.userdays.Count() != 0 || @Model.Handler == "Reset")
        {
        <p>Hear are you working days @Model.Username</p>
        <hr>
        <table>
            <tr>
                <th>
                    Days
                </th>
            </tr>
            <td>
            @foreach(var userDays in @Model.userdays)
            {
            <li>
                @userDays
            </li>
            }
            </td>
        </table>
        }

    </div>
<div class="text-center">
    <div class="widget">
<form method="post">
<div class="form-group">
    <h1 class="display-5">Welcome <b>@Model.Username</b></h1>
    <h1 class="display-5">Schedule Shift Days</h1>
</div>
    <table class="table mytable">
            <tr>
                <th>SELECT</th>
                <th>DAY</th>
                <th>STATUS</th>

            </tr>
        @foreach (var item in @Model.DaysOfWeek)
        {
        <tr>
            @if(item.Value.Contains(@Model.Username))
            {
                <td>
                    <input class="checkbox" name="CheckedDays" type="checkbox" checked value="@item.Key" />
                </td>
                <td>
                    @item.Key
                </td>     
            }
            else
            {
                <td>
                    <input class="checkbox" name="CheckedDays" type="checkbox" value="@item.Key" />
                </td>
                <td>
                    @item.Key
                </td>     
            }
            @if(item.Value.Count() == 0)
            {
                <td>
                    <i class="fa fa-battery-empty" id="empty" aria-hidden="true"><h6>Empty</h6></i>
                </td>
            }
            else if(item.Value.Count() < 3)
            {
                <td>
                    <i class="fa fa-battery-half" id="warning" aria-hidden="true"><h6>Half-full</h6></i>
                </td>
            }
            else if(item.Value.Count() >= 3)
            {
                <td>
                    <i class="fa fa-battery-full" id="good" aria-hidden="true"><h6>Full</h6></i>
                </td>
            }
            
        </tr>
        }
    </table>
    @if(TempData["Message"] != null)
    {
        <div class="alert alert-success">
            <b>@TempData["Message"]</b>
        </div>
    }
    <div class="form-group row mt-5">
    <div class="col-sm-13">
        @if(@Model.Username != null)
        {
            <button type="update" asp-page-handler="Reset" class="button-73">UPDATE</button>
            <button class="button-73"><a asp-page="Index" asp-page-handler="Logout">LOGOUT</a></button>
        }
        @if(@Model.Username == null)
        {
            <button type="Index" asp-page-handler="LogIn" class="button-73 blink">Login</button>
        }
    </div>
    </div>
    <div class="form-group row mt-5 mb-5">
        <input type="hidden" class="form-control"  asp-for="Username" id="firstName" placeholder="Name">
    </div>
</form>
</div>
</div>
</div>


